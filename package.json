{
  "name": "charm-mcp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "tsx src/server/index.ts",
    "server:dev": "nodemon --watch src/server -e ts,js --exec tsx src/server/index.ts",
    "start": "concurrently -n \"VITE,SERVER\" -c \"blue,green\" \"npm run dev\" \"npm run server:dev\"",
    "test:validation": "tsx src/scripts/runValidationTests.ts",
    "build:mcp-servers": "npm run build --workspaces --if-present",
    "dev:mcp-servers": "npm run dev --workspaces --if-present",
    "build:all": "npm run build:mcp-servers && npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@modelcontextprotocol/sdk": "^1.1.1",
    "@modelcontextprotocol/server-brave-search": "^0.6.2",
    "@modelcontextprotocol/server-filesystem": "^2025.1.14",
    "@modelcontextprotocol/server-memory": "^0.6.2",
    "@modelcontextprotocol/server-puppeteer": "^0.6.2",
    "@modelcontextprotocol/server-sequential-thinking": "^0.6.2",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/xml2js": "^0.4.14",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "cors": "^2.8.5",
    "dompurify": "^3.2.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.5.1",
    "mermaid": "^11.4.1",
    "postcss": "^8.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^8.0.7",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^3.0.1",
    "tailwindcss": "^3.4.17",
    "xml2js": "^0.6.2",
    "xmldom": "^0.6.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/xmldom": "^0.1.34",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "nodemon": "^3.1.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  },
  "workspaces": [
    "src/custom-mcp-servers/*"
  ]
}
